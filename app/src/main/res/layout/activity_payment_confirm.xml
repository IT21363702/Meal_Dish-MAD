    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/proceedToPayment"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="8dp"
            android:text="@string/userPayConf_pay"
            app:layout_constraintBottom_toTopOf="@+id/back_from_payment_confirm"
            app:layout_constraintEnd_toEndOf="@+id/back_from_payment_confirm"
            app:layout_constraintStart_toStartOf="@+id/back_from_payment_confirm"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/back_from_payment_confirm"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp"
            android:text="@string/userPayConf_cancelBtn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/paymentAmountViewer"
            android:layout_width="329dp"
            android:layout_height="46dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="-"
            android:textColor="@color/mainBlue"
            android:textSize="32sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

